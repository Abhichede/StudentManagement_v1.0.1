<!-- Event card -->
<style>
  .demo-card-event.mdl-card {
    width: 20rem;
    height: 5rem;
    background: #4475b8;
  }
  .demo-card-event > .mdl-card__actions {
    border-color: rgba(255, 255, 255, 0.2);
  }
  .demo-card-event > .mdl-card__title {
    align-items: flex-start;
  }
  .demo-card-event > .mdl-card__title > h4 {
    margin-top: 0;
    padding-top: 3rem;
  }
  .demo-card-event > .mdl-card__actions {
    display: flex;
    box-sizing:border-box;
    align-items: center;
  }
  .demo-card-event > .mdl-card__actions > .material-icons {
    padding-right: 10px;
  }
  .demo-card-event > .mdl-card__title,
  .demo-card-event > .mdl-card__actions,
  .demo-card-event > .mdl-card__actions > .mdl-button {
    color: #fff;
  }
</style>


<% if !@fee_structures.nil? %>
  <div class="mdl-grid">
    <% @fee_structures.each do |fee_structure| %>
      <div class="mdl-layout-spacer"></div>
        <div class="mdl-cell mdl-cell--3-col">
        <div class="demo-card-event mdl-card mdl-shadow--2dp">
          <div class="mdl-card__title mdl-card--expand">
            <h4 class="mdl-typography--text-center">
              <%= fee_structure.student_class %> - <%= fee_structure.section %>
            </h4>
          </div>
          <div class="mdl-card__actions mdl-card--border">
            <%= link_to 'View List', {controller: 'students', action: 'index',
                                      standard: fee_structure.student_class, section: fee_structure.section },
                        class: 'mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect' %>
            <div class="mdl-layout-spacer"></div>
            <%= link_to '<i class="material-icons">keyboard_arrow_right</i>'.html_safe, {controller: 'students', action: 'index',
                                      standard: fee_structure.student_class, section: fee_structure.section },
                        class: 'mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect' %>

          </div>
        </div>
        </div>
        <div class="mdl-layout-spacer"></div>
    <% end %>
  </div>
<% end %>